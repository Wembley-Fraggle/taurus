<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.fhnw.taurus.ConnectActivity">

    <TextView
        android:id="@+id/connect_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/press_connect"
        />

    <TextView
        android:id="@+id/text_ip_address"
        android:layout_below="@+id/connect_intro"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ip_address"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
    />

    <EditText
        android:id="@+id/ip_address"
        android:layout_below="@+id/text_ip_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/text_ip_port"
        android:layout_below="@+id/ip_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ip_port"
        android:layout_marginTop="12dp"
        />

    <EditText
        android:id="@+id/ip_port"
        android:layout_below="@+id/text_ip_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="number"
        android:ellipsize="end"
        />

    <Button
        android:id="@+id/connect_button"
        android:text="@string/connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="connect"
        />

</RelativeLayout>
